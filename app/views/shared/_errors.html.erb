<div id="error_messages">
  <% if errors.any? %>
    <% errors.each do |error| %>
      <div x-data="{ show: true }" x-show="show" x-init="setTimeout(() => show = false, 5000)" data-controller="alert" aria-live="assertive" class="fixed inset-x-0 bottom-0 flex items-end px-4 py-8 pointer-events-none sm:p-6 sm:items-start z-0 overflow-y-visible">
        <div  class="w-full flex flex-col items-center space-y-6 sm:items-end">
          <div
        data-controller="transition"
        data-transition-enter-active="transform ease-out duration-300 transition"
        data-transition-enter-from="translate-y-2 opacity-0 sm:translate-y-0 sm:translate-x-2"
        data-transition-enter-to="translate-y-0 opacity-100 sm:translate-x-0"
        data-transition-leave-active="transition ease-in duration-100"
        data-transition-leave-from="opacity-100"
        data-transition-leave-to= "opacity-0"
        class="max-w-sm w-full bg-red shadow-lg rounded-lg pointer-events-auto ring-1 ring-black ring-opacity-5 overflow-visible bg-red-400">
            <div class="p-4">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <!-- Heroicon name: outline/check-circle -->
                  <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="ml-3 w-0 flex-1 pt-0.5 text-white">
                  <p id="notice" class="text-sm font-medium text-gray-900"><%= error.full_messages %></p>
                </div>
                <div class="ml-4 flex-shrink-0 flex">
                  <button data-action="alert#close" class="bg-white rounded-md inline-flex text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <span class="sr-only">Close</span>
                    <!-- Heroicon name: solid/x -->
                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
