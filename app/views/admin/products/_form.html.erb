<%= form_with model: @product, url: @product.new_record? ? admin_products_path : admin_product_path(@product), method: @product.new_record? ? :post : :patch, data: { turbo_stream: true, turbo_frame: "_top" }, class: "w-full h-full p-6 flex flex-col justify-between" do |form| %>
  <div>
    <div class="flex flex-wrap -mx-3 mb-6 space-y-4">
      <div class="w-full px-3">
        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name">
          Product Name
        </label>
        <%= form.text_field :name, class: "appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 mb-3 leading-tight focus:border-purple-600 focus:bg-white", required: true, placeholder:"Blueband Choco" %>
      </div>
      <div class="w-full px-3">
        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-last-name">
          Price
        </label>
        <%= form.text_field :price, class: "appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 mb-3 leading-tight focus:border-purple-600 focus:bg-white", required: true, placeholder:"Blueband Choco" %>
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 space-y-4">
      <div class="w-full px-3">
        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
          Quantity
        </label>
        <%= form.text_field :quantity, class: "appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 mb-3 leading-tight focus:border-purple-600 focus:bg-white", required: true, placeholder:"Blueband Choco" %>
      </div>
      <div class="w-full px-3">
        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
          Low Stock Level
        </label>
        <%= form.text_field :low_stock_level, class: "appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 mb-2 leading-tight focus:border-purple-600 focus:bg-white", required: true, placeholder:"Restock level" %>
      </div>
      <div class="w-full px-3">
        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
          Description
        </label>
        <%= form.text_area :description, class: "appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 mb-2 leading-tight focus:border-purple-600 focus:bg-white", required: true, placeholder:"Product description", rows: "6" %>
        <p class="text-gray-600 text-xs italic">Make it as long and descriptive as possible.</p>
      </div>
      <div class="w-full px-3">
        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
          Attach Image
        </label>
        <%= form.file_field :image, class: "appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 mb-2 leading-tight focus:border-purple-600 focus:bg-white", required: true, placeholder:"Product image" %>
        <p class="text-gray-600 text-xs italic">Choose an appropriate image from your local library.</p>
      </div>
    </div>
  </div>
  <div>
   <%= form.submit class: "w-full py-2 px-3 space-x-2 text-white font-semibold bg-purple-900 flex items-center rounded-lg hover:cursor-pointer" %>
  </div>
<% end %>



