<% if @product.quantity <= @product.low_stock_level %>
<div class="bg-red-200 border-t-4 border-red-700 rounded-b text-teal-900 px-4 py-3 shadow-md mb-4" role="alert">
  <div class="flex">
    <div class="py-1"><svg class="fill-current h-6 w-6 text-purple-500 mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"/></svg></div>
    <div>
      <p class="font-bold text-purple-900">This Product is below the Low Stock Level. Please Restock !</p>
    </div>
  </div>
</div>
<% end %>
<div class="p-6 bg-white rounded-lg w-full h-auto">
  <div class='grid grid-cols-12 gap-x-4'>
    <div class='col-span-3'>
      <div class='w-[200px] h-[200px]'>
        <% if @product.image.attached? %>
          <%= image_tag @product.image, class: "w-full h-full" %>
        <% end %>
      </div>
    </div>
    <div class='col-span-3 space-y-6'>
      <div>
        <p class='text-base font-semibold'>Product Name</p>
        <p><%= @product.name %></p>
      </div>
      <div>
        <p class='text-base font-semibold'>Unit Price</p>
        <p><%= @product.price %></p>
      </div>
    </div>
    <div class='col-span-3 space-y-6'>
      <div>
        <p class='text-base font-semibold'>Quantity In Stock</p>
        <p><%= @product.quantity %></p>
      </div>
      <div>
        <p class='text-base font-semibold'>Low Stock Level</p>
        <p><%= @product.low_stock_level %></p>
      </div>
    </div>
    <div class='col-span-3'>
      <div>
        <p class='text-base font-semibold'>Quantity In Stock</p>
        <p><%= @product.description %></p>
      </div>
    </div>
  </div>
</div>
